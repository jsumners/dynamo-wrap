{
  "name": "@jsumners/dynamo-wrap",
  "version": "1.0.0",
  "description": "A simple put/get wrapper for DynamoDB",
  "main": "index.js",
  "scripts": {
    "lint": "standard | snazzy",
    "lint-ci": "standard",
    "test": "tap --no-cov 'test/**/*.test.js'",
